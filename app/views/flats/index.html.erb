<div class="navbar navbar-light bg-light px-5">
  <div>
    <a href="#" class="navbar-brand">Simple Airbnb</a>
  </div>
  <div class="d-flex justify-content-between">
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <button class="btn btn-outline-primary ms-2"><%= link_to "Add Flat", new_flat_path, class:"text-decoration-none text-primary" %></button>
  </div>
</div>

<div class="container mt-3">
  <h1>All our Flats (<%= @flats.count %>)</h1>
    <div class="row g-3 mt-2">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="card h-100 border">
            <div class="card-body text-start p-3 bg-light">
              <h5><%= flat.name %></h5>
              <p><%= flat.address %></p>
              <div class="d-flex">
                <div class="me-3"><i class="fa-solid fa-person me-1"></i> <%= flat.price_per_night %></div>
                <div><i class="fa-solid fa-euro-sign me-1"></i> <%= flat.number_of_guests %></div>
              </div>
            </div>
            <div class="card-footer border-top bg-white">
              <%= link_to "More info", flat_path(flat), class:"text-decoration-none" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
